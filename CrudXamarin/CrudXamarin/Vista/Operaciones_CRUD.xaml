<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrudXamarin.Vista.Operaciones_CRUD">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nombre" />
            <Entry Text="{Binding Nombre}" Placeholder="Name"></Entry>
            <Label Text="Notes"></Label>
            <Entry Text="{Binding Notas}" Placeholder="Notes"></Entry>
            <Label Text="Done"></Label>
            <Switch IsToggled="{Binding Done}"></Switch>
            <Button Text="Agregar Nueva Tarea" Clicked="OnToDoItemAdded_Clicked"  x:Name="OnToDoItemAdded"></Button>
            <Button Text="Eliminar" Clicked="ButtonEliminar_Clicked"  x:Name="ButtonEliminar"></Button>
            <Button Text="Actualizar" Clicked="ButtonActualizar_Clicked"  x:Name="ButtonActualizar"></Button>
            <Button Text="Cancelar" Clicked="ButtonCancelar_Clicked"  x:Name="ButtonCancelar"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>